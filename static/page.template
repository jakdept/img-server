<html>

<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="/static/page.css">
  <script src="/static/page.js"></script>

</head>


<body>

  <!-- Always shows a header, even in smaller screens. -->
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <span class="mdl-layout-title">ShitPosting 9001</span>
        <!-- Add spacer, to align navigation to the right -->
        <div class="mdl-layout-spacer"></div>
        <!-- Navigation. We hide it in small screens. -->
      </div>
    </header>
    {{ with .Dirs }}
    <div class="mdl-layout__drawer">
      <span class="mdl-layout-title">Title</span>
      <nav class="mdl-navigation">
        {{ range . }}
        <a class="mdl-navigation__link" href="/{{.}}/">{{.}}</a>
        {{ end }}
      </nav>
    </div>
    {{ end }}
    <main class="mdl-layout__content">

      <div id="image-container" class="image-container">

        {{range .Files}}
        <img class="image-card mdl-shadow--2dp" src="/thumb/{{.}}.jpg" data-original="/{{.}}"> {{end}}

      </div>
      <div id="preview-pane-container">
        <div class="preview-pane">
          <a>
            <img>
          </a>
        </div>

        <div id="preview-pane-control">
          <div class="preview-pane-control-stack">
            <div class="icon material-icons preview-icon preview-pane-close-button" style="float: right;">close</div>
          </div>
          <div class="preview-pane-control-stack preview-pane-control-buttons">
            <!-- Raised button -->
            <a>
            </a>
            <button class="mdl-button mdl-js-button mdl-button--raised">
              Image
            </button>
            <button class="mdl-button mdl-js-button mdl-button--raised preview-pane-close-button">
              Image
            </button>
          </div>

        </div>
        <!-- preview pane controls -->

      </div>
      <!--preview pane container -->

    </main>
  </div>
</body>


</html>